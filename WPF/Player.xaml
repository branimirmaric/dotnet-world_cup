<UserControl x:Class="WPF.Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF"
             MouseDown="Player_MouseDown"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="75">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="17"/>
        </Grid.RowDefinitions>
        <Image Name="imgPlayer" Source="/Images/jersey.jpg" Grid.Column="1" MaxWidth="75" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="tbNumber" Text="99" FontWeight="UltraBold" FontSize="16" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBlock x:Name="tbName" Text="text" FontSize="8" Grid.ColumnSpan="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBlock x:Name="tbCaptain" Text="C" FontSize="16" Margin="6,1" FontWeight="Bold" Grid.Column="1" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
